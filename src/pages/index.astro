---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

---

<Layout title="Welcome to Astro.">
	<main class=" top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
		<Header />
		<section class=" h-auto w-full flex justify-center items-center flex-col 
		mt-5">
			<figure class="bg-red-300 h-60 w-60 flex justify-center items-center 
			overflow-hidden rounded-full bg-transparent border border-slate-100 ">
				<img src="assets/sergio.png" alt="Foto Sergio" class="max-w-full object-cover">
			</figure>
			<div class=" mt-2 w-full h-auto flex justify-center items-center
			flex-col">
				<h1 class="text-white text-3xl">Sergio Garc√≠a</h1>
				<h2 class="text-white text-2xl">Desarrollador Web</h2>
				<div class="w-full h-auto flex justify-center items-center flex-wrap gap-3 mt-2">
					<button class="bg-opacity-50 bg-gray-800 shadow-lg backdrop-blur-9 border-opacity-18 rounded-10 w-auto p-1 rounded-lg
									transition-transform transform hover:scale-105 cursor-pointer">
					  <a href="https://twitter.com">GITHUB</a>
					</button>
				  
					<button class="bg-opacity-50 bg-gray-800 shadow-lg backdrop-blur-9 border-opacity-18 rounded-10 w-auto p-1 rounded-lg
									transition-transform transform hover:scale-105 cursor-pointer">
					  <a href="https://linkedin.com">LINKEDIN</a>
					</button>
				  
					<button class="bg-opacity-50 bg-gray-800 text-slate-400 shadow-lg backdrop-blur-9 border-opacity-18 rounded-10 w-auto p-1 rounded-lg
									transition-transform transform hover:scale-105 cursor-pointer">
					  <a href="https://gmail.com" class="btn-link-no-underline">GMAIL</a>
					</button>
				  </div>
				  
				  
			</div>
		</section>
	</main>
</Layout>
